{
  "name": "@the-sleeping-dog/react-components",
  "version": "0.9.0",
  "description": "React components designed with Bulma",
  "keywords": [
    "react",
    "bulma"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/fabienschlegel/react-components.git"
  },
  "license": "MIT",
  "author": {
    "name": "Fabien Schlegel",
    "email": "fabien.schlegel.fr@gmail.com"
  },
  "bugs": {
    "url": "https://github.com/fabienschlegel/react-components/issues",
    "email": "fabien.schlegel.fr@gmail.com"
  },
  "main": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "lint": "eslint . --ext ts --ext tsx",
    "prettify": "prettier --write src",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:clear": "jest --clearCache",
    "analyze": "node ./analyze.js",
    "dead": "ts-prune -p tsconfig.eslint.json",
    "dead:count": "ts-prune -p tsconfig.eslint.json |wc -l",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "prepare": "husky install"
  },
  "dependencies": {
    "bulma": "^0.9.4",
    "clsx": "^1.2.1"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.1.2",
    "@fortawesome/free-regular-svg-icons": "^6.1.2",
    "@fortawesome/free-solid-svg-icons": "^6.1.2",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@storybook/addon-essentials": "^6.5.16",
    "@storybook/addon-links": "^6.5.16",
    "@storybook/builder-webpack5": "^6.5.16",
    "@storybook/manager-webpack5": "^6.5.16",
    "@storybook/node-logger": "^6.5.16",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/react": "^6.5.16",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.1",
    "@types/mdx": "^2.0.2",
    "@types/node": "^18.0.0",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "@types/react-test-renderer": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.17.0",
    "sass": "^1.32.8",
    "sass-loader": "^13.2.2",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "ts-prune": "^0.8.8",
    "typescript": "^4.1.2",
    "webpack-bundle-analyzer": "^4.4.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,css,scss}": "prettier --write"
  }
}
